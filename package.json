{
    "name": "discord-rss-bot-for-raspberrypi",
    "version": "0.2.0",
    "description": "Discord RSS Feed Bot - Optimized for Raspberry Pi",
    "main": "dist/index.js",
    "scripts": {
        "build": "NODE_OPTIONS=\"--max-old-space-size=512\" tsc",
        "build:pi": "NODE_OPTIONS=\"--max-old-space-size=256\" tsc --incremental",
        "build:fast": "NODE_OPTIONS=\"--max-old-space-size=1024\" tsc --skipLibCheck",
        "start": "NODE_ENV=production node dist/index.js",
        "start:pi": "NODE_ENV=production node --max-old-space-size=256 dist/index.js",
        "dev": "LOG_LEVEL=debug ts-node --transpile-only src/index.ts",
        "dev:safe": "LOG_LEVEL=info ts-node --transpile-only src/index.ts",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop discord-rss-bot-for-raspberrypi",
        "pm2:restart": "pm2 restart discord-rss-bot-for-raspberrypi",
        "pm2:logs": "pm2 logs discord-rss-bot-for-raspberrypi --lines 100",
        "pm2:monit": "pm2 monit",
        "clean": "rm -rf dist logs/*.log feed_cache.json bot_status.json",
        "status": "pm2 status",
        "health": "node -e \"console.log('Memory:', process.memoryUsage()); console.log('Uptime:', process.uptime(), 's');\""
    },
    "keywords": [
        "discord",
        "rss",
        "bot"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "discord.js": "^14.14.1",
        "dotenv": "^17.2.3",
        "rss-parser": "^3.13.0"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.3",
        "@types/node": "^20.11.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}